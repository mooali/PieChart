<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="pane" minHeight="500.0" minWidth="500.0" prefHeight="500.0" prefWidth="500.0" rotate="180.0" styleClass="Pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.bfh.PieChart.controllers.PieChartController">
    <stylesheets>
        <!-- the css provides styling of the pane and some style classes for the pie chart slices -->
        <URL value="@PieChart.css" />
    </stylesheets>
   <rotationAxis>
       <!-- this element, together with the rotate attribute above make that the y-axis is from bottom to top
            (default is top to bottom) -->
      <Point3D x="1.0" />
   </rotationAxis>
</Pane>
